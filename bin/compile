#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.4.7"
APACHE_PATH="apache"
PHP_VERSION="5.5.9"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

APACHE_URL="https://wallaceit.com.au/buildpackassets/apache-$APACHE_VERSION.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

PHP_URL="https://wallaceit.com.au/buildpackassets/php-$PHP_VERSION.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php
#cp $LP_DIR/conf/php-fpm.conf php/etc

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php
ln -s /app/php/sbin/php-fpm bin/php-fpm

# install dependent libraries (fpm testing stuff)
echo "-----> Installing dependent libraries"
# apt-get install -y libjpeg62 libxml2 libcurl3

# permissions
echo "-----> Setting up users and folder permissions"
adduser daemon www-data
chgrp www-data -R /app

cat >>boot.sh <<EOF
chmod 0775 -R /app
for var in \`env|cut -f1 -d=\`; do
echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app
# Uncomment if you want to try to get fpm working
#echo "Launching php"
#exec php-fpm -p "/app/php"
echo "Launching nodejs"
exec nodejs /app/api/server.js &
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*
